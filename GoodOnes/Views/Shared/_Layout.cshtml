<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Good Ones</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>

    <div id="o-wrapper" class="o-wrapper">

        <div class="navbar navbar-background">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" id="c-button--push-right" class="navbar-toggle">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href='@Url.Action("Index", "Home")' class="navbar-brand logo">
                        SMALL LOGO HERE
                    </a>
                </div>
            </div>
        </div>

        <div class="container body-content">
            <div id="flash-container">@Html.RenderFlash()</div>
            @RenderBody()
            <!--
            <div class="footer-container">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        -->
        </div>

        </div><!-- /o-wrapper -->

    <nav id="c-menu--push-right" class="c-menu c-menu--push-right">
        <button class="c-menu__close">Close Menu &rarr;</button>
        <ul class="c-menu__items">
            <li class="c-menu__item"><a href="#" class="c-menu__link">Events Calendar</a></li>
            <li class="c-menu__item"><a href="#" class="c-menu__link">Tell A Friend</a></li>
            <li class="c-menu__item"><a href="#" class="c-menu__link">Sponsor An Event</a></li>
            <li class="c-menu__item"><a href="#" class="c-menu__link">Advertise With Us</a></li>
            <li class="c-menu__item"><a href="#" class="c-menu__link">Contact Us</a></li>
        </ul>
    </nav><!-- /c-menu push-right -->
    <div id="c-mask" class="c-mask"></div><!-- /c-mask -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jscripts")
    <script type="text/javascript" src="~/Scripts/Views/Shared/_Layout.js"></script>

    <script type="text/javascript">
    var _afh = '@Html.GetAntiForgeryToken()';
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
